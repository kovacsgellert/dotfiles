<Project>
  <PropertyGroup>
    <!-- Enable nullable reference types for all projects in the solution -->
    <Nullable>enable</Nullable>
    
    <!-- Other common properties you might want to set solution-wide -->
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>
</Project>